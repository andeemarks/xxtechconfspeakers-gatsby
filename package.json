{
  "name": "xxtechconfspeakers",
  "version": "1.0.0",
  "description": "Website for www.xxtechconfspeakers.org",
  "author": "Andy Marks <vampwillow@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/andeemarks/xxtechconfspeakers-gatsby"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andeemarks/xxtechconfspeakers-gatsby/issues"
  },
  "homepage": "https://github.com/andeemarks/xxtechconfspeakers-gatsby",
  "private": true,
  "dependencies": {
    "@types/numeral": "^2.0.5",
    "@types/underscore": "^1.11.15",
    "classnames": "^2.5.1",
    "gatsby": "^5.13.3",
    "gatsby-plugin-typography": "^5.13.1",
    "gatsby-source-filesystem": "^5.13.1",
    "gatsby-transformer-json": "^5.13.1",
    "numeral": "^2.0.6",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet": "^6.1.0",
    "react-typography": "^0.16.23",
    "react-vis": "^1.12.1",
    "time-ago": "^0.2.1",
    "typography": "^0.16.24",
    "typography-theme-bootstrap": "^0.16.19",
    "underscore": "^1.13.6"
  },
  "resolutions": {
    "set-value": "^2.0.1",
    "mixin-deep": "^1.3.2"
  },
  "scripts": {
    "lint": "eslint --ignore-path .gitignore . --ext ts --ext tsx --ext js --ext jsx",
    "lint:fix": "yarn lint --fix",
    "ajv": "ajv validate -s ./spec/confs-schema.json -d ./src/data/confs.json",
    "test": "nyc ava",
    "check-urls": "node ./spec/UrlChecker.js",
    "build": "gatsby build",
    "develop": "gatsby develop",
    "format": "prettier --write 'src/**/*.js' 'spec/**/*.js'",
    "type-check": "tsc",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/node": "^20.11.16",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "ajv-cli": "~5.0.0",
    "ava": "^6.1.1",
    "babel-eslint": "^10.0.0",
    "commitizen": "^4.3.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.2",
    "gatsby-cli": "^5.13.1",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.2",
    "mockdate": "^3.0.5",
    "nyc": "^15.0.1",
    "prettier": "^3.2.5",
    "source-map-support": "^0.5.16",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 80,
    "exclude": [
      "spec"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test && yarn format && yarn lint && yarn ajv",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
