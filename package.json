{
  "name": "xxtechconfspeakers",
  "version": "1.0.0",
  "description": "Website for www.xxtechconfspeakers.org",
  "author": "Andy Marks <vampwillow@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/andeemarks/xxtechconfspeakers-gatsby"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andeemarks/xxtechconfspeakers-gatsby/issues"
  },
  "homepage": "https://github.com/andeemarks/xxtechconfspeakers-gatsby",
  "dependencies": {
    "@types/numeral": "^0.0.26",
    "@types/underscore": "^1.9.4",
    "classnames": "^2.2.6",
    "gatsby": "^2.20.4",
    "gatsby-plugin-favicon": "^3.1.6",
    "gatsby-plugin-react-helmet": "^3.2.1",
    "gatsby-plugin-typescript": "^2.3.1",
    "gatsby-plugin-typography": "^2.4.1",
    "gatsby-source-filesystem": "^2.2.2",
    "gatsby-transformer-json": "^2.3.1",
    "numeral": "^2.0.6",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-helmet": "^5.2.1",
    "react-typography": "^0.16.19",
    "react-vis": "^1.11.7",
    "time-ago": "^0.2.1",
    "typography": "^0.16.19",
    "typography-theme-bootstrap": "^0.16.19",
    "underscore": "^1.10.2"
  },
  "resolutions": {
    "set-value": "^2.0.1",
    "mixin-deep": "^1.3.2"
  },
  "scripts": {
    "lint": "eslint --ignore-path .gitignore . --ext ts --ext tsx --ext js --ext jsx",
    "lint:fix": "yarn lint --fix",
    "ajv": "ajv validate -s ./spec/confs-schema.json -d ./src/data/confs.json",
    "test": "nyc ava-ts",
    "check-urls": "node ./spec/UrlChecker.js",
    "build": "gatsby build",
    "develop": "gatsby develop",
    "format": "prettier --write 'src/**/*.js' 'spec/**/*.js'",
    "type-check": "tsc"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "ajv-cli": "~3.1.0",
    "ava": "^2.4.0",
    "ava-ts": "^0.25.2",
    "commitizen": "4.0.4",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "gatsby-cli": "2.12.42",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "mockdate": "^2.0.5",
    "nyc": "^14.1.1",
    "prettier": "^2.0.4",
    "source-map-support": "^0.5.16",
    "ts-node": "^8.8.1",
    "typescript": "^3.8.3"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 80,
    "exclude": [
      "spec"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test && yarn format && yarn lint && yarn ajv",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
